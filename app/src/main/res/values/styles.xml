<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:actionModeStyle">@style/ActionModeTheme</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="android:actionModeBackground">@color/actionBarColor</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="android:actionModeBackground">@color/actionBarColor</item>
    </style>

    <style name="SpinnerButtonStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <!-- We want our spinner's to use the same gravity as an EditText, so that they look
            visually consistent with other controls in our forms -->
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:actionModeStyle">@style/ActionModeTheme</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
